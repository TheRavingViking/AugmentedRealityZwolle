<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ARzwolle.ScannerPage"
             Title="Scan QR code">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label HorizontalOptions="Center" VerticalOptions="Center" Text="Scan een soortgelijke code" Margin="0,0,0,5">
            </Label>

            <Image x:Name="Image" Source="{Binding image}"></Image>
        <Label HorizontalOptions="Center" VerticalOptions="Center" Text="Start met Scannen" Margin="0,0,0,5">
        </Label>
        <Button HorizontalOptions="Center" VerticalOptions="Center" x:Name ="ButtonScan" Text="Go!" Clicked="ButtonScan_OnClicked"></Button>
    </StackLayout>
</ContentPage>